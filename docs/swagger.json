  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "RegisterUser": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password",
          "name"
        ]
      },
      "LoginUser": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CalorieRequest": {
        "type": "object",
        "properties": {
          "height": {
            "type": "number",
            "description": "Height (cm)"
          },
          "weight": {
            "type": "number",
            "description": "Weight (kg)"
          },
          "age": {
            "type": "number",
            "description": "Age"
          },
          "targetWeight": {
            "type": "number",
            "description": "Target weight (kg)"
          },
          "gender": {
            "type": "string",
            "enum": [
              "male",
              "female"
            ],
            "description": "Gender"
          },
          "bloodType": {
            "type": "integer",
            "description": "Blood type (1-4)"
          }
        },
        "required": [
          "height",
          "weight",
          "age",
          "targetWeight",
          "gender",
          "bloodType"
        ]
      },
      "GetDiary": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "date"
        ]
      },
      "AddDiary": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "productId": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        },
        "required": [
          "date",
          "productId",
          "amount"
        ]
      },
      "DeleteDiary": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "productId": {
            "type": "string"
          }
        },
        "required": [
          "date",
          "productId"
        ]
      },
      "SessionRefreshed": {
        "type": "object",
        "description": "Kullanıcı oturumu yenilendiğinde dönen veri yapısı.",
        "properties": {
          "token": {
            "type": "string",
            "description": "Yeni JWT erişim token'ı"
          },
          "refreshToken": {
            "type": "string",
            "description": "Yeni refresh token"
          },
          "user": {
            "type": "object",
            "description": "Kullanıcı bilgileri",
            "properties": {
              "email": {
                "type": "string",
                "format": "email",
                "description": "Kullanıcının e-posta adresi"
              },
              "name": {
                "type": "string",
                "description": "Kullanıcının adı"
              },
              "id": {
                "type": "string",
                "description": "Kullanıcı ID'si"
              }
            }
          }
        },
        "required": [
          "token",
          "refreshToken",
          "user"
        ]
      },
      "Product": {
        "type": "object",
        "description": "Schema representing product information.",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Unique identifier of the product"
          },
          "title": {
            "type": "string",
            "description": "Product name"
          },
          "weight": {
            "type": "number",
            "description": "Product weight (grams)"
          },
          "calories": {
            "type": "number",
            "description": "Calories per 100 grams"
          },
          "category": {
            "type": "string",
            "description": "Product category"
          },
          "groupBloodNotAllowed": {
            "type": "array",
            "description": "Blood groups that should avoid this product",
            "items": {
              "type": "integer",
              "description": "Blood group (1, 2, 3, 4)"
            }
          }
        },
        "required": [
          "_id",
          "title",
          "weight",
          "calories",
          "category",
          "groupBloodNotAllowed"
        ]
      }
    }
  }
}